{
  "name": "hermes-server",
  "version": "1.0.0",
  "description": "Backend server that receives email subs, saves them in a db and adds them to third-party email providers.",
  "main": "dist/app.bundle.cjs",
  "type": "module",
  "scripts": {
    "build": "rollup -c",
    "build:watch": "rollup -cw",
    "dev": "concurrently \"npm run build:watch\" \"nodemon dist/app.bundle.cjs\"",
    "dev:debug": "concurrently \"npm run build:watch\" \"nodemon --inspect dist/app.bundle.cjs\"",
    "start": "node dist/app.bundle.cjs",
    "format": "prettier --check src",
    "format:fix": "prettier --write src",
    "lint": "eslint src",
    "lint:fix": "eslint --fix src"
  },
  "author": "Sam",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-handlebars": "^7.1.2",
    "express-rate-limit": "^6.9.0",
    "helmet": "^7.0.0",
    "runtypes": "^6.7.0",
    "sequelize": "^6.32.1",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.3",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.1.0",
    "@rollup/plugin-typescript": "^11.1.2",
    "@tsconfig/node-lts": "^18.12.3",
    "@types/express": "^4.17.17",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.48.0",
    "nodemon": "^3.0.1",
    "prettier": "3.0.3",
    "rollup": "^3.28.0",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-watch": "^1.0.2",
    "tslib": "^2.6.1",
    "typescript": "^5.1.6"
  }
}
